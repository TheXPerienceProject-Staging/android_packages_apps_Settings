<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:key="battery_protection_screen"
    android:title="@string/battery_protection_title">

    <com.android.settingslib.widget.TopIntroPreference
        android:key="battery_battery_protection_intro_text"
        android:title="@string/battery_protection_intro_text"/>

    <mx.xperience.framework.preference.SystemSettingSwitchPreference
        android:key="battery_protection"
        android:title="@string/battery_protection_master_switch_title"
        android:defaultValue="false" />

    <mx.xperience.framework.preference.CustomSeekBarPreference
        android:key="battery_protection_level"
        android:title="@string/battery_protection_level_title"
        android:max="100"
        settings:min="65"
        settings:units="%"
        android:defaultValue="80"
        android:dependency="battery_protection" />

    <mx.xperience.framework.preference.CustomSeekBarPreference
        android:key="battery_protection_resume_level"
        android:title="@string/battery_protection_resume_level_title"
        android:max="99"
        settings:min="1"
        settings:units="%"
        android:defaultValue="60"
        android:dependency="battery_protection" />

    <mx.xperience.framework.preference.SystemSettingSwitchPreference
        android:key="battery_protection_reset_stats"
        android:title="@string/battery_protection_reset_stats_title"
        android:summary="@string/battery_protection_reset_stats_summary"
        android:defaultValue="false"
        android:dependency="battery_protection" />
</PreferenceScreen>