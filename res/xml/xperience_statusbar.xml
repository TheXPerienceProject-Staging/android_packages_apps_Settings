<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/xperience_statusbar"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

   <mx.xperience.framework.preference.SystemSettingSwitchPreference
        android:key="network_traffic_state"
        android:title="@string/network_traffic_state_title"
        android:summary="@string/network_traffic_state_summary"
        android:defaultValue="true" />

    <mx.xperience.framework.preference.CustomSeekBarPreference
        android:key="network_traffic_autohide_threshold"
        android:title="@string/network_traffic_autohide_threshold_title"
        android:max="10"
        settings:min="0"
        settings:units="" />

    <!-- 
    <Preference
        android:key="status_bar_carrier"
        android:fragment="mx.xperience.rainbowunicorn.fragments.CarrierLabelSettings"
        android:title="@string/carrier_category" /> -->


     <mx.xperience.framework.preference.SystemSettingSwitchPreference
         android:key="show_fourg_icon"
         android:title="@string/show_fourg_icon_title"
         android:summary="@string/show_fourg_icon_summary"
         android:defaultValue="false"/>

    <PreferenceCategory
        android:key="reticker"
        android:title="@string/reticker_category" >

        <mx.xperience.framework.preference.SystemSettingSwitchPreference
            android:key="reticker_status"
            android:title="@string/reticker_title"
            android:summary="@string/reticker_summary"
            android:defaultValue="false" />

        <mx.xperience.framework.preference.SystemSettingSwitchPreference
            android:dependency="reticker_status"
            android:key="reticker_colored"
            android:title="@string/reticker_colored_title"
            android:summary="@string/reticker_colored_summary"
            android:defaultValue="false" />

        <mx.xperience.framework.preference.SystemSettingSwitchPreference
            android:dependency="reticker_status"
            android:key="reticker_landscape_only"
            android:title="@string/reticker_landscape_only_title"
            android:summary="@string/reticker_landscape_only_summary"
            android:defaultValue="false" />
    </PreferenceCategory>
</PreferenceScreen>
